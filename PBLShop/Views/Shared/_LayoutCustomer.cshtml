<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>main</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"> 
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <link rel="stylesheet" href="~/css/main.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
</head>
<body>
  <header class = "header">
    <section class = "header__logo">
        <div class="header__logo-ads" id="ads">
            <span class="ad-text">Miễn phí vận chuyển cho đơn hàng từ 800.000đ</span>
            <span class="ad-text">Giao hàng nội thành trong ngày</span>
            <span class="ad-text">Đổi trả trong 7 ngày</span>
        </div>
        <div class="header__logo-img">
            <a asp-controller="Home"><img id="logo" src="~/image/ZERAFASHION.png" alt="Logo"></a>
        </div class>

        <div class="header__logo-mininav">
            <!-- <div class="header__logo-mininavitem"><input type="text" id="searchInput" name="searchInput" placeholder="Nhập từ khóa tìm kiếm..."></div> -->
            <div class="header__logo-mininavitem">
                <button class="header__logo--icon" id= "searchButton"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
            <div class="header__logo-mininavitem" id = "dropdown-user">
                <span class="header__logo--icon"><i class="fa-solid fa-circle-user"></i></span>
                <div class="dropdown-user-content">
                    <a asp-action="Profile" asp-controller="User">Thông tin cá nhân</a>
                    <a asp-action="Index" asp-controller="DonHang">Lịch sử mua hàng</a>
                    @if (User.IsInRole("KhachHang"))
                    {
                         <a asp-action="Logout" asp-controller="User">Đăng xuất</a>
                    }
                    else{
                        <a asp-action="Login" asp-controller="User">Đăng nhập</a>
                        <a asp-action="Register" asp-controller="User">Đăng kí</a>
                    }
                </div>
            </div>
            @await Component.InvokeAsync("GioHang")
        </div>
    </section>
    <!-- search bar -->
    <form asp-action="Search" asp-controller="SanPham">
        <div id="searchBar" class="search-bar">
        <input type="text" placeholder="Nhập từ khóa" name="SpTofind">
        <button class="search-bar__button" id= "searchButton-search-bar"><i class="fa-solid fa-magnifying-glass"></i></button>
        <button type="submit" class="search-bar__button" id = "exit-searchBar"><i class="fa-solid fa-xmark"></i></button>
    </div>
    </form>
    <!-- end header__logo-->
    <nav class="header__navbar">
        <ul class="header__navbar-list">
            <h3>
              <li class="header__navbar-item"> <a asp-action="Index" asp-controller="Home" id="a1">TRANG CHỦ</a></li>
              <li class="header__navbar-item"> <a asp-action="Index" asp-controller="SanPham" id="a1">SẢN PHẨM</a></li>
              <li class="header__navbar-item"> <a href="#" id="a1">VỀ CHÚNG TÔI</a></li>
              <li class="header__navbar-item"> <a href="#" id="a1">LIÊN HỆ</a></li>
            </h3>
        </ul>
    </nav>
    <!-- end header__navbar -->
</header>

<!-- end header -->
    @RenderBody()
