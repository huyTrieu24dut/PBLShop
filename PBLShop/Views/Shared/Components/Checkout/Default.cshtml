@model IEnumerable<PBLShop.ViewModels.ChiTietGhVM>

<div class="buy-content__order-products">
    @foreach (var item in Model)
    {

        <div class="buy-content__order-san-pham">
            <div class="buy-content__order-hinh-anh">
                <img src="~/image/@item.HinhAnh" alt="Hình ảnh sản phẩm">
            </div>
            <div class="buy-content__order-thong-tin">
                <h2>@item.TenSp</h2>
                <p class="buy-content__order-gia">Màu: @item.MauSp ₫</p>
                <p class="buy-content__order-gia">Size @item.size ₫</p>
                <p class="buy-content__order-gia">@item.DonGia.ToString("N0") ₫</p>
                <a href="#" class="buy-content__order-chi-tiet">Chi tiết</a>
            </div>
        </div>
    }
</div>
@{
    int total = 0;
    foreach (var item in Model)
    {
        total += item.SoLuong * item.DonGia ?? 0;
    }
    <div>
        <p>Tạm tính</p>
        <p>@total.ToString("N0") đ</p>
    </div>
    <div>
        <p>Phí vận chuyển</p>
        <p>0đ</p>
    </div>
    <div>
        <p>Tổng cộng</p>
        <p>@total.ToString("N0") đ</p>
    </div>
}