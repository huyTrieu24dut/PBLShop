@model IEnumerable<PBLShop.ViewModels.ChiTietGhVM>
@{
    ViewData["Title"] = "Add";
}
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a href="#"><img src="~/img/product-1.png" alt="Image"></a></td>
                            <td><a href="#">@item.TenSp</a></td>
                            <td>@item.DonGia đ</td>
                            <td>
                                <div class="qty">
                                    <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                    <input type="text" value="@item.SoLuong">
                                    <button class="btn-plus"><i class="fa fa-plus"></i></button>
                                </div>
                            </td>
                            <td>@(item.SoLuong * item.DonGia) đ</td>
                            <td>
                                <form asp-controller="ChiTietGh" asp-action="Remove" asp-route-masp="@item.MaSp">
                                    <button><i class="fa fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>