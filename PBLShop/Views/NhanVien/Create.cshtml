@model PBLShop.ViewModels.NhanVienVM

@{
    Layout = "_LayoutAdmin";
}

<body>
    <div class="admin-add-update-staff container">
        <h1>Thêm nhân viên</h1>
        <h2>Thông tin chi tiết</h2>

        <form asp-action="Create" asp-controller="NhanVien" asp-route-url="@ViewBag.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-details">
                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" type="email" class="form-control" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MatKhau">Mật Khẩu:</label>
                    <input asp-for="MatKhau" class="form-control" type="password" required>
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HoTen">Họ Tên:</label>
                    <input asp-for="HoTen" class="form-control" type="text" required>
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="gender">Giới tính:</label>
                    <select asp-for="MaGioiTinh" class="form-control" required>
                        <option value="">Chọn giới tính</option>
                        <option value="1">Nam</option>
                        <option value="2">Nữ</option>
                        <option value="3">Khác</option>
                    </select>
                    <span asp-validation-for="MaGioiTinh" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DiaChi">Địa Chỉ:</label>
                    <input asp-for="DiaChi" class="form-control" type="text" required>
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DienThoai">Điện Thoại:</label>
                    <input asp-for="DienThoai" class="form-control" type="text" required>
                    <span asp-validation-for="DienThoai" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NgaySinh">Ngày Sinh:</label>
                    <input asp-for="NgaySinh" class="form-control" type="date" required>
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="role">Vai Trò:</label>
                    <select asp-for="MaVaiTro" class="form-control" required>
                        <option value="">Chọn Vai Trò</option>
                        <option value="1">Nhân viên</option>
                        <option value="2">Admin</option>
                    </select>
                    <span asp-validation-for="MaVaiTro" class="text-danger"></span>
                </div>

                <div class="col justify-content-center d-flex flex-column">
                    <button type="submit" class="btn btn-primary mt-5 mx-auto">Tạo tài khoản</button>
                </div>
            </div>
        </form>
    </div>
</body>
